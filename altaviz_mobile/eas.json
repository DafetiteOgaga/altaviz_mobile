{
  "cli": {
    "version": ">= 15.0.15",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "extraParams": {
          "androidNdkSplit": ["arm64-v8a", "armeabi-v7a"]
        }, // include this arch only
        "buildType": "apk" // Add this line to generate APKs
      }
    }
  },
  "submit": {
    "production": {}
  }
}
